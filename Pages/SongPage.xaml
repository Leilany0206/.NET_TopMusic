<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="TopMusic.Pages.SongPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:vm="clr-namespace:TopMusic.PageModels">

    <ContentPage.BindingContext>
        <vm:SongPageModel />
    </ContentPage.BindingContext>

    <ContentPage.Content>
        <ScrollView>
            <StackLayout Padding="20" Spacing="10">

                <Label
                    FontAttributes="Bold"
                    FontSize="30"
                    Text="{Binding SongName}" HorizontalTextAlignment="Center"/>

                <Image HeightRequest="200" Source="{Binding SongImg}" Margin="15"/>

                <Label FontAttributes="Bold" Text="Año de estreno:" />
                <Label Text="{Binding Year}" TextColor="Gray"/>

                <Label FontAttributes="Bold" Text="Duración:" />
                <Label Text="{Binding Time}" TextColor="Gray"/>

                <Label FontAttributes="Bold" Text="Letra:" />
                <Label Text="{Binding Lyrics}" TextColor="Gray"/>

            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>